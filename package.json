{
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --cache --fix src",
    "prettier": "prettier --write src",
    "compile": "tsc && npm run copy",
    "clean": "rimraf dist/",
    "copy": "npx copyfiles -u 1 src/.env src/**/*.json dist/",
    "build": "npm run lint && npm run prettier && npm run clean && npm run compile",
    "start": "npx copyfiles -u 1 src/.env src/**/*.json dist/ && node dist/index.js",
    "dev": "npm run clean && tsc-watch --onSuccess \"npm run start\"",
    "prod": "npm run build && npm run start"
  },
  "dependencies": {
    "@discordjs/rest": "^2.0.1",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  }
}
